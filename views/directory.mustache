<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Directory</title>
    <link rel="stylesheet" href="styles.css">
  </head>
  <body>
    <nav>
      <form class="all-robots" action="/" method="get">
        <input type="submit" name="all" value="all robots">
      </form>
      <form class="unemployed" action="/unemployed" method="post">
        <input type="submit" name="unemployed" value="unemployed robots">
      </form>
      <form class="employed" action="/employed" method="post">
        <input type="submit" name="employed" value="employed robots">
      </form>
    </nav>
    <div class="flex-container">
      {{#model}}
      <a href="{{id}}" class="worker" >
        <img src={{avatar}}>
        <h3 class="worker-name">{{name}}</h3>
        <div class="worker-job">{{job}}</div>
        <div class="worker-no-job">{{^job}}Available for hire{{/job}}</div>
        <div class="worker-company">{{company}}</div>
        <div class="worker-no-company">{{^company}}{{/company}}</div>
      </a>
      {{/model}}
    </div>

  </body>
</html>
